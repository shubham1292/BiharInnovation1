<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgRobot"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:padding="1dp"
            android:src="@drawable/robot" />

        <TextView
            android:id="@+id/aboutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imgRobot"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:padding="18dp"
            android:text="@string/about"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/rnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutContent"
            android:text="@string/r_d_solutions"
            android:padding="2dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRobotics"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="999dp"
            android:layout_below="@+id/rnd"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imgRobotics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/robotics"
                android:layout_below="@+id/rnd"
                android:scaleType="fitCenter"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtRobotics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewRobotics"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="0dp"
            android:text="Robotics"
            android:textSize="20sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewIot"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="999dp"
            android:layout_below="@+id/txtRobotics"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imgIot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtRobotics"
                android:src="@drawable/iot"
                android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtIot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewIot"
            android:layout_marginLeft="90dp"
            android:text="Internet Of Things(IOT)"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAi"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="999dp"
            android:layout_below="@+id/txtIot"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imgAi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtIot"
                android:src="@drawable/ai"
                android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtAi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewAi"
            android:layout_marginLeft="90dp"
            android:text="Artificial Intelligence(AI)"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewInno"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="999dp"
            android:layout_below="@+id/txtAi"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imgInno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtAi"
                android:layout_marginTop="0dp"
                android:padding="20dp"
                android:src="@drawable/innovativematerial"
                android:scaleType="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txtInno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Innovative Materials"
            android:layout_below="@id/cardViewInno"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="100dp"/>



    </RelativeLayout>
</ScrollView>